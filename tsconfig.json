{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2017", "es7", "es6", "dom"],
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
